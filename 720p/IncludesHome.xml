<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="homeMenusLayoutOriginal">
		<itemlayout width="640" height="52">
			<control type="label">
				<posx>20</posx>
				<posy>70</posy>
				<width>640</width>
				<height>50</height>
				<font>homeMenu</font>
				<align>left</align>
				<label>$INFO[ListItem.Label]</label>
				<textcolor>Color0</textcolor>
				<visible>!Skin.HasSetting(homemenu.altfont)</visible>
			</control>
			<control type="label">
				<posx>20</posx>
				<posy>70</posy>
				<width>640</width>
				<height>50</height>
				<font>homeMenuAlt</font>
				<align>left</align>
				<label>$INFO[ListItem.Label]</label>
				<textcolor>Color0</textcolor>
				<visible>Skin.HasSetting(homemenu.altfont)</visible>
			</control>
		</itemlayout>			
		<focusedlayout width="640" height="52">
			<control type="image">
				<posy>-2</posy>
				<width>375</width>
				<height>200</height>
				<aspectratio align="left">stretch</aspectratio>
				<texture border="1">home/menuSelectOriginal.png</texture>
				<include>home_ListScroll</include>
				<animation effect="fade" start="100" end="50" time="350" condition="System.IdleTime(5) + !Skin.HasSetting(home.menuselect.disablefading)">Conditional</animation>
				<visible>!Control.HasFocus(888)</visible>
			</control>
			<control type="label">
				<posy>70</posy>
				<posx>20</posx>
				<width>640</width>
				<height>50</height>
				<font>homeMenu</font>
				<align>left</align>
				<textcolor>Color5</textcolor>
				<label>$INFO[ListItem.Label]</label>
				<visible>!Skin.HasSetting(homemenu.altfont)</visible>
			</control>
			<control type="label">
				<posy>70</posy>
				<posx>20</posx>
				<width>640</width>
				<height>50</height>
				<font>homeMenuAlt</font>
				<align>left</align>
				<textcolor>Color5</textcolor>
				<label>$INFO[ListItem.Label]</label>
				<visible>Skin.HasSetting(homemenu.altfont)</visible>
			</control>
			<control type="label">
				<posy>70</posy>
				<posx>20</posx>
				<width>640</width>
				<height>50</height>
				<font>light.Home</font>
				<align>left</align>
				<textcolor>Color1</textcolor>
				<label>$INFO[ListItem.Label]</label>
				<visible>Control.HasFocus(888)</visible>
			</control>
			<control type="label">
				<posy>72</posy>
				<posx>20</posx>
				<width>640</width>
				<height>50</height>
				<font>light.Home</font>
				<align>left</align>
				<textcolor>Color5</textcolor>
				<label>[LOWERCASE]$INFO[ListItem.Label2][/LOWERCASE]</label>
				<!--<visible>Container(9000).HasFocus(21) | Container(9000).HasFocus(22)</visible>-->
			</control>
		</focusedlayout>
	</include>
	<include name="home_statuslabel">
		<posy>7</posy>
		<width>screen_Width</width>
		<font>rss</font>
		<align>center</align>
		<pauseatend>6000</pauseatend>
		<scroll>false</scroll>
		<scrollout>false</scrollout>
		<aligny>center</aligny>
		<textcolor>Color2</textcolor>
		<include>fadeinout</include>
	</include>
</includes>
